<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/section_item_spacing"
    android:gravity="center" >

    <ImageView
        android:id="@+id/still_icon"
        android:layout_width="145dip"
        android:layout_height="82dip"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/still_icon_shade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/still_icon"
        android:layout_alignLeft="@id/still_icon"
        android:layout_alignRight="@id/still_icon"
        android:layout_alignTop="@id/still_icon"
        android:background="@drawable/bg_channel_template_item_shade"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/still_special_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/still_icon"
        android:layout_alignTop="@id/still_icon"
        android:background="@drawable/icon_special_mark"
        android:visibility="gone"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/still_update"
        style="@style/template_item_description"
        android:layout_alignBottom="@id/still_icon"
        android:layout_alignLeft="@id/still_icon"
        android:layout_alignRight="@id/still_icon"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/still_duration"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/channel_template_item_time_height"
        android:layout_alignBottom="@id/still_icon"
        android:layout_alignRight="@id/still_icon"
        android:layout_marginBottom="4dip"
        android:layout_marginRight="4dip"
        android:background="@drawable/background_channel_template_item_time"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/channel_template_item_time_paddingleft"
        android:paddingRight="@dimen/channel_template_item_time_paddingright"
        android:textColor="@android:color/white"
        android:textSize="@dimen/channel_template_item_time_textsize" />

    <LinearLayout
        android:id="@+id/still_btm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/still_icon"
        android:layout_alignRight="@id/still_icon"
        android:layout_below="@id/still_icon" >

        <TextView
            android:id="@+id/still_title"
            style="@style/channel_template_item_title"
            android:ellipsize="end"
            android:lines="2"
            android:text="@string/app_name" />
    </LinearLayout>

</RelativeLayout>
