<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:paddingBottom="@dimen/section_item_spacing"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/poster_icon"
        android:layout_width="93dip"
        android:layout_height="124dip"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/poster_icon_shade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/poster_icon"
        android:layout_alignLeft="@id/poster_icon"
        android:layout_alignRight="@id/poster_icon"
        android:layout_alignTop="@id/poster_icon"
        android:background="@drawable/bg_channel_template_item_shade"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/poster_special_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/poster_icon"
        android:layout_alignTop="@id/poster_icon"
        android:background="@drawable/icon_special_mark"
        android:visibility="gone"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/poster_update"
        style="@style/template_item_description"
        android:layout_alignBottom="@id/poster_icon"
        android:layout_alignLeft="@id/poster_icon"
        android:layout_alignRight="@id/poster_icon"
        android:text="@string/app_name" />

    <LinearLayout
        android:id="@+id/poster_btm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/poster_icon"
        android:layout_alignRight="@id/poster_icon"
        android:layout_below="@id/poster_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/poster_title"
            style="@style/channel_template_item_title"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/app_name" />
    </LinearLayout>

</RelativeLayout>