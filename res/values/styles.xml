    <style name="Haha.actionBar.TabView" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/abc_tab_indicator_ab_holo</item>
    </style>
    
    <style name="Haha.actionBar.TabText" parent="@style/Widget.AppCompat.Light.ActionBar.TabText">
        <item name="android:textColor">@drawable/textcolor_actionbar_tab</item>
        <item name="android:textSize">@dimen/text_fontsize_2</item>
    </style>
    
	<style name="Haha.actionBar.TabBar" parent="@style/Widget.AppCompat.Light.ActionBar.TabBar">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:height">10dip</item>
        <item name="android:maxHeight">10dip</item>
        <item name="android:minHeight">10dip</item>
    </style>
    
	<style name="Haha.actionBar.buttonStyle" parent="@style/Widget.AppCompat.Light.ActionButton">
        <item name="android:maxWidth">42dip</item>
        <item name="android:minWidth">42dip</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">0dip</item>
    </style>
    
	<style name="Haha.Light.ActionBar" parent="@style/Haha.Light.Base.ActionBar">
        <item name="background">@color/background_actionbar</item>
        <item name="titleTextStyle">@style/TextAppearance.Holo.Widget.ActionBar.Title.Haha</item>
    </style>
    
	<style name="TextAppearance.Holo.Widget.ActionBar.Title.Haha" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    
