<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.PageIndicatorDefaults" parent="@style/HahaTheme">
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicator</item>
    </style>

    <style name="Theme.MainPageIndicatorDefaults" parent="@style/HahaTheme">
        <item name="vpiTabPageIndicatorStyle">@style/Widget.MainTabPageIndicator</item>
    </style>

    <style name="Widget"></style>

    <style name="Widget.TabPageIndicator" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/vpi_tab_indicator</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:textAppearance">@style/TextAppearance.TabPageIndicator</item>
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
        <item name="android:minWidth">69dp</item>
    </style>

    <style name="Widget.MainTabPageIndicator" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/vpi_tab_indicator</item>
        <item name="android:paddingLeft">11dp</item>
        <item name="android:paddingRight">11dp</item>
        <item name="android:textAppearance">@style/TextAppearance.TabPageIndicator</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@drawable/textcolor_tabpage_main</item>
        <item name="android:singleLine">true</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <!--
        <item name="android:dividerPadding">8dp</item>
        <item name="android:showDividers">middle</item>
        -->
        <item name="android:minWidth">30dp</item>
    </style>

    <style name="TextAppearance.TabPageIndicator" parent="android:TextAppearance.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@drawable/selector_tabtext</item>
    </style>

</resources>